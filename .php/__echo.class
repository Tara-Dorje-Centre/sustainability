<?php 

class __echo{
//public const USE_CURRENT = '-use-current-';
protected $__MyClassName = '__echo';
protected $__MyFunctionName = '__construct';

protected function echoLocale($f = '-use-current-', $c= '-use-current-'){
	if ($c != '-use-current-'){
		$this->__MyClassName = $c;
	}
	if ($f != '-use-current-'){
		$this->__MyFunctionName = $f;
	}
}

protected function echoValue($show = true, $n, $v, $f = '-use-current-', $c= '-use-current-'){
	$this->echoLocale($f, $c);
	if ($show == true){
		$cf = $this->__MyClassName.'->'.$this->__MyFunctionName;
		printLine($cf.'->'.$n.'['.$v.']');
	}
}

protected function echoPrint($show = true, $msg, $f = '-use-current-', $c= '-use-current-'){
	$this->echoLocale($f, $c);
	if ($show == true){
		$cf = $this->$__MyClassName.'->'.$this->__MyFunctionName;
		printLine($cf.'['.$msg.']');
	}
}


	
}
?>
