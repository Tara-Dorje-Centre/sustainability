public function tables($joinTypes = true){
$q = " FROM activities a JOIN tasks t ON a.task_id = t.id ";
$q .= " JOIN projects p ON t.project_id = p.id ";


$q .= " LEFT OUTER JOIN project_types pt ON p.type_id = pt.id ";
return $q;
}

