	public function setDefaults(){
		global $sessionTime;
		$this->started = $sessionTime;	
		$this->order = $this->task->activityCount + 1;
		//$this->hoursEstimated = $this->task->hoursEstimated;
		$this->hoursActual = $this->task->hoursEstimated;
