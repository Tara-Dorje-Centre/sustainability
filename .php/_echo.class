<?php 

class _echo{

protected $echoEnabled = true;

protected $__MyClassName = '__echo';
protected $__MyFunctionName = '__construct';

public function echoLocale($f = '-use-current-', $c= '-use-current-'){
	if ($c != '-use-current-'){
		$this->__MyClassName = $c;
	}
	if ($f != '-use-current-'){
		$this->__MyFunctionName = $f;
	}
}
protected function echoVN($v, $n = '-not-set-'){
	if ($n != '-not-set-'){
		return $n.'=['.$v.']';
	} else {
		return '['.$v.']';
	}
}
protected function echoCF(){
		return $this->__MyClassName.'.'.$this->__MyFunctionName.':';
}
public function echoValue($show = true, $n, $v, $f = '-use-current-', $c= '-use-current-'){
	$this->echoLocale($f, $c);
	if ($show == true){
		$this->echoPrintline($this->echoCF().$this->echoVN($v, $n));
	}
}
public function echoPrint($show = true, $msg, $f = '-use-current-', $c= '-use-current-'){
	$this->echoLocale($f, $c);
	if ($show == true){
		$this->echoPrintline($this->echoCF().$this->echoVN($msg));
	}
}
public function echoPrintline($msg){
	
	if ($this->echoEnabled == true){
	echo $msg.'<br />';
	}
}
	
}
?>
