		if ($showLink == true){
			$ll = new LocationLinks;	
			$links =$ll->detailViewEditHref($selectedValue);
			$select .= $links;	
		}
		return $select;

	}
	
	protected function setDefaults(){
	
		if ($this->pageMode == 'ADD'){
			//if add came from all locations default, reset to 0 for no parent
			if ($this->idParent == -1){
				$this->idParent = 0;
			}
			$this->f->idParent = $this->id;
		}
		
		$this->echoState(true,'setAddDefaults');
		
		
	}  

	public function editForm(){
	
	$this->echoState(true,'editForm');
	
		$this->setDefaults();
		if ($this->pageMode == 'ADD'){
			$legend = 'Add Location';
		} else {
			$legend = 'Edit Location';
		}
		//$entity = 'location';
		$c = new LocationLinks;
		$contextMenu = $this->links->formatToggleLink('formOptional','+Options');		
		$form = openEditForm($entity,$legend,'pr_Location_Save.php', $contextMenu);
		
		//formRequired fields	
		$formRequired = inputFieldName($entity,$this->f->name,'name','Name');

		$type = new LocationType('SELECT');
		$select = $type->options($this->f->idType,'idType','false',true);
		$formOptional = captionedInput('Type',$select);
					
		$formOptional .= inputFieldText($entity,$this->f->description,'description','Description');

						
