<?php 

class MeasureTypeSQL implements IentitySQL{
public function columns(){
$query = " mt.id, ";
$query .= " mt.name, ";
$query .= " mt.notes, ";
$query .= " mt.description, ";
$query .= " mt.updated, ";
$query .= " mt.created ";
return $query;	
}
public function info($id){
$query = " SELECT ";	
$query .= $this->columns();
$query .= " FROM measure_types mt ";
$query .= " WHERE  ";
$query .= " mt.id = ".$id." ";
return $query;
}
public function list($resultPage, $rowsPerPage){
$query = " SELECT ";	
$query .= $this->columns();
$query .= " FROM measure_types mt ";
$query .= " ORDER BY name ";
$query .= sqlLimitClause($resultPage, $rowsPerPage);
return $query;	
}
public function count(){
$query = " SELECT ";	
$query .= " COUNT(*) total_types ";
$query .= " FROM measure_types mt ";
return $query;	
}

}
?>
