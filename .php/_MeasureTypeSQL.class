<?php 

class MeasureTypeSQL implements IentitySQL{
public function columns(){
$query = " mt.id, ";
$query .= " mt.name, ";
$query .= " mt.notes, ";
$query .= " mt.description, ";
$query .= " mt.updated, ";
$query .= " mt.created ";
return $query;	
}
public function info($id){
$query = " SELECT ";	
$query .= $this->columns();
$query .= " FROM measure_types mt ";
$query .= " WHERE  ";
$query .= " mt.id = ".$id." ";
return $query;
}
public function list($page = 1, $rows = 10){
$query = " SELECT ";	
$query .= $this->columns();
$query .= " FROM measure_types mt ";
$query .= " ORDER BY name ";
$query .= sqlLimitClause($page, $rows);
return $query;	
}
public function count(){
$query = " SELECT ";	
$query .= " COUNT(*) total_types ";
$query .= " FROM measure_types mt ";
return $query;	
}


