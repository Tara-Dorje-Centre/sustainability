	}
			
	protected function saveInsert(){
	
			$sql = " INSERT INTO projects ";
			$sql .= " (name, ";
			//$sql .= " parent_id, ";
			$sql .= " location_id, ";
			$sql .= " started, ";
			$sql .= " updated, ";
			$sql .= " description, ";
			$sql .= " summary, ";
			//$sql .= " lessons_learned, ";
			$sql .= " show_always, ";
			$sql .= " type_id, ";
			$sql .= " purpose) ";
			$sql .= " VALUES (";
			$sql .= "'".$this->name."', ";
			//$sql .= " ".$this->parentId.", ";
			$sql .= " ".$this->locationId.", ";
			$sql .= " '".$this->started."', ";
			$sql .= " CURRENT_TIMESTAMP, ";
			$sql .= "'".$this->description."', ";
			$sql .= "'".$this->summary."', ";
			//$sql .= "'".$this->lessons."', ";
			$sql .= "'".$this->showAlways."', ";
			$sql .= " ".$this->typeId.", ";
			$sql .= "'".$this->purpose."') ";
			
			$result = dbRunSQL($sql);
			
			$this->id = dbInsertedId();
	
	}
	
