	public function __construct(){
		parent::__construct();
		$this->notes = new _textField('notes','notes','Notes',true);
		$this->displayOrder = new _numberField('display_order','display-order','Display Order',true);
    }
    protected function reset(){
    	parent::reset();
		$this->displayOrder->reset(0);
		$this->notes->reset('');
    }

	public function fetch($row){
		parent::setRow($row);
		$this->displayOrder->fetch($row);
		$this->notes->fetch($row);
		
	}
	
	public function format(){
		parent::format();
		$this->displayOrder->format($row);
		$this->notes->format($row);
	}
	
	public function listCaption(){
		$this->addContent(parent::listCaption(),true);
		$this->addContent($this->displayOrder->listCaption());
		$this->addContent($this->notes->listCaption());
		return $this->getContent();
	}
	
	public function listDetail(){
		$this->addContent(parent::listDetail(),true);
		$this->addContent($this->displayOrder->listDetail());
		$this->addContent($this->notes->listDetail());
		return $this->getContent();
	}
	
	public function displayDetail(){
		$this->addContent(parent::displayDetail(),true);
		$this->addContent($this->displayOrder->displayDetail());
		$this->addContent($this->notes->displayDetail());
		return $this->getContent();
		
	}
