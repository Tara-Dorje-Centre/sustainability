	public function __construct(){
		parent::__construct();
		$this->notes = new _textField('notes','notes','Notes',true);
		$this->displayOrder = new _numberField('display_order','display-order','Display Order',true);
  
  		$this->_register('notes', $this->notes);
		$this->_register('displayOrder', $this->displayOrder);
    }
    public function reset(){
    	parent::reset();
		$this->displayOrder->reset(0);
		$this->notes->reset('');
    }

}

