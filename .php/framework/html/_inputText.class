function captionedInput($caption, $input,$messages = ''){
	$s = openDiv('captioned-input');
	if ($caption != ''){
		$s .= wrapDiv($caption,'caption');
	}
	if ($messages != ''){
		$s .= wrapDiv($messages,'validationMessages');
	}
	$s .= wrapDiv($input,'input');
	$s .= closeDiv();
	return $s;
}


