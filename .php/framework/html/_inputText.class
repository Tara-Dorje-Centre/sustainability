<?php
namespace html;

class _inputText extends _input{
	public function __construct($name, $value, $size = 50, $maxLength = 100, $tooltip = 'none', $css = 'editing-input-text'){
		parent::__construct('text',$name,$tooltip,$css);
		//setDefaultDimenions
		$this->setDimensions($maxLength, $size);
		$this->setValue($value);
	}
}

function getTextInput($name, $value, $size = 50, $maxLength = 100, $tooltip = 'none',$css = 'editing-input-text'){
	$e = new _inputText($name, $value,$maxLength,$size,$tooltip,$css);
	return $e->print();
}

function inputFieldText(
	$entity, 
	$value, 
	$id = 'text', 
	$caption = '',
	$size = 50,
	$maxLength = 100,
	$tooltip = NULL,
	$disabled = 'false',
	$css = 'editing-input-text'){

	$input = getTextInput($id, $value, $size,$maxLength,$tooltip,$css);
	$element = captionedInput($caption,$input);
	return $element;
}


