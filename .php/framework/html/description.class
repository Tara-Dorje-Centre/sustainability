<?php
namespace html;

class description extends _inputTextArea{

	public function __construct($name, $value,$caption,$tooltip = 'Enter description',$css = 'editing-input-description'){
		parent::__construct($name, $value,1000,4,60,$tooltip,$css);
		$this->setCaption($caption);
	}
}
function inputFieldDescription(
	$entity, 
	$value, 
	$id = 'description', 
	$caption = 'Description'){

	$element = new description($id,$value,$caption);
	//$element->setCaption($caption);
	return $element->print();
}

function inputDescription(
	$entity, 
	$value, 
	$id = 'description', 
	$caption = 'Description'){

	$element = inputFieldDescription($entity,$value,$id,$caption);
	return $element;
}
