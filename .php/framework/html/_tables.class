<?php
namespace html;

trait colspan{
	public function setColspan($colspan = 0){
		if ($colspan != 0){
			$this->addAttribute('colspan',$colspan);
		}
	}
}

trait rowspan{
	public function setColspan($rowspan = 0){
		if ($rowspan != 0){
			$this->addAttribute('rowspan',$rowspan);
		}
	}
}
trait width{
	public function setWidth($width = 0){
		if ($width!=0){
			$this->addAttribute('width', $width.'%');
		}
	}
	
}

class _table extends _element{
	public function __construct($idName = 'none', $css = 'none'){
		parent::__construct('table', $idName, $css);
	}
	public function addRow(_tr $tr){
		$this->addContent($tr->print());
	}
}

class _th extends _element{
use colspan;
	public function __construct($css = 'none',$colspan = 0){
		$idName = 'none';
		parent::__construct('th', $idName, $css);
		//$this->setContent($text);
		$this->setColspan($colspan);
	}
}

class _tr extends _element{
use width, colspan;
	public function __construct($css = 'none',$width = 0, $colspan = 0){
		$idName = 'none';
		parent::__construct('tr', $idName, $css);
		$this->setWidth($width);
		$this->setColspan($colspan);
	}
	
	public function addHeading(_th $th){
		$this->addContent($th->print());
	}
	public function addData(_td $td){
		$this->addContent($td->print());
	}
}

class _td extends _element{
use width, colspan;
	public function __construct($css = 'none',$width = 0,$colspan = 0){
		$idName = 'none';
		parent::__construct('td', $idName, $css);
		$this->setWidth($width);
		$this->setColspan($colspan);
	}
	
}

?>
