<?php
namespace html;

class hidden extends _input{
	private $n;
	private $v;
	public function __construct($name, $value){
		parent::__construct('hidden',$name,'none','editing-input-hidden');

		$this->setValue($value);
		$this->n = $name;
		$this->v = $value;
	}
	public function print(){
		$input = parent::print();
		//show values during development
		$input .= $this->n.'['.$this->v.']';
		return $input;

	}
}

function getHiddenInput($n, $v){
	 $e = new hidden($n, $v);
	 return $e->print();
}

?>
