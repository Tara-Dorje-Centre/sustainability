<?php
namespace html;

class name extends _inputText{
	public function __construct($name, $value, $caption = 'Name',$tooltip = 'Enter name value', $css = 'editing-input-name'){
		parent::__construct($name,$value, 100, 20, $tooltip,$css);
		$this->setCaption($caption);
	}
}
class url extends _inputText{
	public function __construct($name, $value, $caption = 'url',$tooltip = 'Enter url value', $css = 'editing-input-url'){
		parent::__construct($name,$value, 500, 30, $tooltip,$css);
		$this->setCaption($caption);
	}
}

function inputFieldName(
	$entity, 
	$value, 
	$id = 'name', 
	$caption = 'Name'){

	$element = new name($id,$value,$caption);
	return $element->print();
}


?>
