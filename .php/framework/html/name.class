<?php
namespace html;

class _inputName extends _inputText{
	public function __construct($name, $value, $tooltip = 'none', $css = 'editing-input-name'){
		parent::__construct($name,$value, 100, 30, $tooltip,$css);
	}
}


function inputFieldName(
	$entity, 
	$value, 
	$id = 'name', 
	$caption = 'Name',
	$tooltip = NULL, 
	$disabled = 'false',
	$css = 'editing-input-name'){

	$element = inputFieldText($entity,$value,$id,$caption,30,100,$tooltip,$disabled,$css);
	return $element;
}
?>
