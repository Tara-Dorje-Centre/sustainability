<?php
namespace html;

class notes extends _inputTextArea{

	public function __construct($name, $value,$caption,$tooltip = 'Enter notes',$css = 'editing-input-notes'){
		parent::__construct($name, $value,1000,4,60,$tooltip,$css);
		$this->setCaption($caption);
	}
}

function inputFieldNotes(
	$entity, 
	$value, 
	$id = 'notes', 
	$caption = 'Notes'){


	$element = new notes($id,$value,$caption);
	return $element->print;
}

?>
