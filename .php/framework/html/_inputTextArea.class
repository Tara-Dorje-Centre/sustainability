<?php
namespace html;

class _inputTextarea extends _element{
use valueContent, inputCaption, validation, disabled, dimensionsRows;
	public function __construct($name, $value, $maxLength = 1000, $rows = 4, $cols = 60,$tooltip = 'none',$css = 'editing-input-textarea'){
		parent::__construct('textarea',$name, $css);
		$this->addAttribute('title',$tooltipText);
		$this->setDimensions($maxLength,$rows,$cols);
		$this->setValue($value);
	}
	
	public function print(){
		$this->printDisabled();
		$this->printDimensions();
		
		$d= new _div('ei','edit-input');
		$d->addContent($this->printCaption());
		$d->addContent($this->printValidation());
		$d->addContent(parent::print());
		return $d->print();
	}

}

function getTextArea($n, $v, $l = 1000, $r = 4, $c = 60,$t = 'none',$d = 'false',$css = 'editing-input-textarea'){

	$e = new _inputTextarea($n,$v,$l,$r,$c,$t,$css);
	$e->setDisabled($d);
	return $e->print();

}


function inputFieldTextArea(
	$entity, 
	$value, 
	$id = 'textArea', 
	$caption = '',
	$maxLength = 1000,
	$tooltip = NULL, 
	$disabled = 'false',
	$css = 'editing-input-textarea'){

	$input = getTextArea($id, $value, $maxLength,4,80,$tooltip,$disabled,$css);
	$element = captionedInput($caption,$input);
	return $element;
}





