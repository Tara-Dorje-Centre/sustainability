<?php
namespace html;

class _input extends _emptyElement{
use valueAttribute, inputCaption, validation, disabled, dimensionsSize;
	
	public function __construct(string $type,string $name,string $caption = 'none', $tooltip = 'none', $css = 'editing-input'){
		parent::__construct('input',$name, $css);
		$this->addAttribute('type',$type);
		$this->addAttribute('title',$tooltip);
		$this->setCaption($caption);
	}
	
	public function print(){
		$this->printDisabled();
		$this->printDimensions();
		
		$i = new _div('ei','edit-input');
		$i->addContent($this->printCaption());
		$i->addContent($this->printValidation());
		$i->addContent(parent::print());
		return $i->print();
	}
	
}
?>
