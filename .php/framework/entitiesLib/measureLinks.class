<?php 

class measureLinks extends _entityLinks {
	protected $_pageList = 'pr_Measure_List.php';
	protected $_pageDetail = 'pr_Measure_Detail.php';
	

	public function __construct($menuType = 'DIV',$styleBase = 'menu'){
		parent::__construct($menuType,$styleBase);
	}
	public function listingHref($idParent,$caption = 'Measures'){
		$link = $this->listing($idParent);
		$l = $this->formatHref($caption,$link);
		return $l;	
	}	
	private function detailHref($pageAction = 'VIEW', $id = 0, $idParent = 0, $caption = 'Measure'){
		$link = $this->detail($pageAction,$id,$idParent);
		$l = $this->formatHref($caption,$link);
		return $l;	
	}
	public function listing($idParent){
		$link = $this->_pageList.'?idParent='.$idParent;
		return $link;
	}
	public function listingPaged($baseLink,$found, $resultPage, $perPage){
		$l = $baseLink.'&resultsPageMeasure=';
		$ls = $this->getPagedLinks($l, $found,$perPage,$resultPage);
		return $ls;
	}
	public function detail($pageAction, $id, $idParent = 0){
		$link = $this->_pageDetail.'?pageAction='.$pageAction;
		if($idParent != 0){
			$link .= '&idParent='.$idParent;			
		}
		if ($id != 0){
			$link .= '&id='.$id;
		}
		return $link;
	}	
	public function detailAddHref($idParent,$caption = '+Measure'){
		$l = $this->detailHref('ADD',0,$idParent,$caption);
		return $l;	
	}
	public function detailViewHref($id,$caption = 'ViewMeasure'){
		$l = $this->detailHref('VIEW',$id,0,$caption);
		return $l;	
	}
	public function detailEditHref($id,$caption = 'EditMeasure'){
		$l = $this->detailHref('EDIT',$id,0,$caption);
		return $l;	
	}
	public function detailViewEditHref($id = 0, $viewCaption = 'Measure'){	
		if ($id != 0){
			$links = $this->detailViewHref($id,$viewCaption);
			$links .= $this->detailEditHref($id,'#');
		}
		return $links;
	}	

}
?>
