<?php 

class _calendar{
	private $title;
	private $year;
	private $month;
	private $monthName;
	private $firstDate;
	private $firstDay = 0;
	private $startingBlanks = 0;
	private $daysInMonth;
	private $lastDate;
	private $lastDay = 0;
	private $closingBlanks = 0;
	private $days = array();
	private $nextLink;
	private $prevLink;
	private $content;
	private $currentYear;
	private $currentMonth;
	private $currentDay;
	private $isCurrent = false;
	
	public function __construct($year, $month, $title = null){
		$this->year = $year;
		$this->month = $month;
		$this->title = $title;
		$this->setLayout();
		$this->setLinks();
		$this->setCurrentDay();		
	}
	
	private function setCurrentDay(){
		global $sessionTime;
		$this->currentYear = \html\getTimestampYear($sessionTime);
		$this->currentMonth = \html\getTimestampMonth($sessionTime,'YES');
		$this->currentDay = \html\getTimestampDay($sessionTime,'YES');
		if (($this->currentYear == $this->year) && ($this->currentMonth == ltrim($this->month,'0'))){
			$this->isCurrent = true;
		} else {
			$this->isCurrent = false;
		}
	}
	
	public function setLinks($nextLink = 'none', $prevLink = 'none'){
		$this->nextLink = $nextLink;
		$this->prevLink = $prevLink;
	}
	
	private function setLayout(){
		//default timezone for mktime and date function calls
		//prevents server warning that timezone is not set
		date_default_timezone_set('UTC');
		//calculate firstDayOfMonth
		$this->firstDate = mktime(0,0,0,$this->month, 1, $this->year) ; 

		//calculate dayofweek for first day
		//0 = sunday ... 6 = saturday
		$this->firstDay = date('w', $this->firstDate); 
		$this->monthName = date('F',$this->firstDate);
		//determine blank spaces before first day based on weekstartingday
		$this->startingBlanks = $this->firstDay;
		
		//calculate days in month
		 $this->daysInMonth = cal_days_in_month(CAL_GREGORIAN, $this->month, $this->year);
		//calculate lastDayOfMonth		 
		 $this->lastDate = mktime(0,0,0,$this->month,$this->daysInMonth,$this->year);
		
		//calculate dayofweek for last day		 
		//0 = sunday ... 6 = saturday
		$this->lastDay = date('w', $this->lastDate); 

		//determine blank spaces after last day based on weekstartingday
		$this->closingBlanks = 6 - $this->lastDay;
		
		//populate array of days
		for ($i = 0; $i <= $this->daysInMonth; $i++){
			$this->days[$i] = \html\spacer();	
		}
	}
	
	public function addItem($dayIndex, $text, $itemStyle = 'calendar-item'){
		//add an item to internal array of day contents
		//2013-01-24
		//$date = substr($timestamp,8,2);	
		$i = new \html\_div('dayItem',$itemStyle);
		$i->setContent($text);		
		$this->days[$dayIndex] .= $i->print();

	}

	public function addItemByTimestamp($timestamp, $text, $itemStyle = 'calendar-item'){
		//add an item to internal array of day contents
		//2013-01-24
		//$date = substr($timestamp,8,2);		
		$dayIndex = ltrim(\html\getTimestampDay($timestamp),'0');
		$this->addItem($dayIndex,$text, $itemStyle);	
	}

	private function isDayToday($dayIndex){
		$isToday = false;		
		if ($this->isCurrent == true && $dayIndex == $this->currentDay){
			$isToday = true;
		}
		return $isToday;		
	}

	private function getDayContent($dayIndex){
		$entry = new \html\_div('entry','calendar-entry');
		$n = new \html\_div('dayNumber','calendar-date');
		$n->setContent($dayIndex);
		$entry->setContent($n->print());
		$c = new \html\_div('dayContent','calendar-details');
		$c->setContent($this->days[$dayIndex]);
		$entry->addContent($c->print());
		return $entry->print();
	}
	
	private function getLinkPrev(){
	
		if ($this->prevLink != 'none'){
			$l = new \html\_div('CalendarPrev','calendar-link-prev');
			$l->setContent($this->prevLink);
			$content = $l->print();	
		} else {
			$content = '';
		}
		return $content;
	}
	private function getLinkNext(){
		if ($this->nextLink != 'none'){
			$l = new \html\_div('CalendarNext','calendar-link-next');
			$l->setContent($this->nextLink);
			$content = $l->print();	
		} else {
			$content = '';
		}
		return $content;
	}
	private function spacer($n = 0){
	return \html\spacer($n);
	}
	public function buildCalendar(){
		//loop through internal array of days, printing table rows/data and content
		$daysOfWeek = array("Sunday","Monday","Tuesday","Wednesday","Thursday","Friday","Saturday");
		
		$c = new \html\_div('calendarContainer','calendar-container');
		$month = new \html\_table('calendar','calendar-table');
		$blank = new \html\_td('calendar-td-blanks');
		$blank->setContent($this->spacer());
		
		$titleRow = new \html\_tr('calendar-row');
		$title = new \html\_th('calendar-title',7);
		//$title->setColspan(7);
		
		$text = $this->getLinkPrev();
		$text .= $this->monthName.$this->spacer(4).$this->year.$this->spacer(4).$this->title;
		$text .= $this->getLinkNext();
		$title->setContent($text);
		
		$titleRow->addHeading($title);
		$month->addRow($titleRow);
		$titleDays = new \html\_tr('calendar-row','calendar-row');
		
		$daysHeader = new \html\_th('calendar-title-day','calendar-title-day');
		
		for($i = 0; $i <= 6; $i++){
			$daysHeader->setContent($daysOfWeek[$i]);
			$titleDays->addHeading($daysHeader);
		}
		$month->addRow($titleDays);
		
		$week = new \html\_tr('calendar-row');
		
		//add padding cells to table
		$dayCount = 1;
		if ($this->startingBlanks != 0){
			$blank->setColspan($this->startingBlanks);
			$week->addData($blank);
			$dayCount += $this->startingBlanks;
		}
		//add days of month, break rows every seven
		//sets the first day of the month to 1 
		$dayNumber = 1;

		//loop through the days in the month
		$day = new \html\_td('calendar-day');
		while ($dayNumber <= $this->daysInMonth) 
		{ 
			if ($this->isDayToday($dayNumber) == true){
				$day->setCss('calendar-td-today');
			} else {
				$day->setCss('calendar-td');
			}
			$day->setContent($this->getDayContent($dayNumber));
			$week->addData($day);
 
			$dayNumber++; 
			$dayCount++;
			//add week to month and reset week content every 7 days
			if ($dayCount > 7){
				$month->addRow($week);
				$week->setContent('');
				$dayCount = 1;
			}

 		} 
		//add closing cells to table
		if ($this->closingBlanks != 0){
			$blank->setColspan($this->closingBlanks);
			$week->addData($blank);
		}	
		$month->addRow($week);
		$c->setContent($month->print());
		return $c->print();
	}
		
}
?>
