class _numberField extends _field
 implements Ifield, Iecho, IcontentWriter {

	public function __construct(string $dbColumn = 'not_used', string $postVariable = 'not-used', string $caption = 'no caption',bool $enable = false){
		parent::__construct($dbColumn, $postVariable,$caption,$enable);
		$this->type = 'NUMBER';
		$this->inputAsType = 'NUMBER';
	}
	
	public function input(string $entity){
		return inputFieldNumber($entity,$this->value(),$this->postVariable,$this->caption);
	}
}

