<?php 

class _textField extends _field
 implements Ifield, Iecho, IcontentWriter {
	public function __construct(string $dbCol = 'not_used', string $envVar = 'not-used', string $caption = 'no caption'){
		parent::__construct($dbCol, $envVar, $caption);
		$this->_datatype = 'TEXT';
	}
	
}
class _numberField extends _field
 implements Ifield, Iecho, IcontentWriter {
	public function __construct(string $dbCol = 'not_used', string $envVar = 'not-used', string $caption = 'no caption'){
		parent::__construct($dbCol, $envVar, $caption);
		$this->_datatype = 'NUMBER';
	}
	public function input(){
		return inputFieldNumber($this->_entity,$this->value(),$this->env->variable,$this->_caption);
	}
}

