<?php 

abstract class _activityChildFields extends _taskChildFields
implements Iecho, IcontentWriter{

	public $activity;
	
    public function __construct(){
    	parent::__construct();
    	$this->activity = new _idNameField('activity_id','idActivity','activity_name',true);
    }
    protected function reset(){
    	parent::reset(){
			$this->activity->reset(0);
    }
	public function setRow($row){
		parent::setRow($row);
		$this->activity->fetch($row);
	}
	public function format(){
		parent::format();
		$this->activity->format();
	}
	public function display(){;
		$this->addContent(parent::display(),true);
		$this->addContent($this->activity->p());		
		return $this->getContent();
	}
	public function listHeading(){
		$this->addContent(parent::listHeading(),true);
		$this->addContent($this->activity->th());		
		return $this->getContent();
	}
	public function listDetail(){
		$this->addContent(parent::listDetail(),true);
		$this->addContent($this->activity->td());
		return $this->getContent();
	}
	public function getPostVars(){
		parent::getPostVars();
		$this->activity->post();
	}
}


?>
