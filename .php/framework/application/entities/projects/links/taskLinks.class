<?php
namespace application\entities\projects\links;

class taskLinks extends entityLinks {
	
	public function linkPeriodicTasks(bool $closed = false){
		if ($closed == true){
			$status = 'COMPLETE';
			$caption = 'Done';
		} else {
			$status = 'INCOMPLETE';
			$caption = 'To Do';
		}
		return $this->list($caption,-1,0,$status);
	}
	
}
?>
