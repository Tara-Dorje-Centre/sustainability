<?php 

abstract class _taskChildFields extends _projectChildFields
implements Iecho, IcontentWriter{

	public $task;
	
    public function __construct(){
    	parent::__construct();
    	$this->task = new _idNameField('task_id','idTask','task_name',true);
    }
    protected function reset(){
    	parent::reset(){
			$this->task->reset(0);
    }
	public function setRow($row){
		parent::setRow($row);
		$this->task->fetch($row);
	}
	public function format(){
		parent::format();
		$this->task->format();
	}
	public function display(){;
		$this->addContent(parent::display(),true);
		$this->addContent($this->task->p());		
		return $this->getContent();
	}
	public function listHeading(){
		$this->addContent(parent::listHeading(),true);
		$this->addContent($this->task->th());		
		return $this->getContent();
	}
	public function listDetail(){
		$this->addContent(parent::listDetail(),true);
		$this->addContent($this->task->td());
		return $this->getContent();
	}
	public function getPostVars(){
		parent::getPostVars();
		$this->task->post();
	}
}


?>
