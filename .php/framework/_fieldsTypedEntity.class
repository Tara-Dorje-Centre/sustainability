<?php 

abstract class _typedChildFields extends _childFields
implements Iecho, IcontentWriter{

	public $type;
	
    public function __construct(){
    	parent::__construct();
    	$this->type = new _idNameField('type_id','idType','type_name',true);
    }
    protected function reset(){
    	parent::reset(){
    	$this->type->reset(0);
    }
	public function setRow($row){
		parent::setRow($row);
		$this->type->fetch($row);
	}
	public function format(){
		parent::format();
		$this->type->format();
	}
	public function display(){;
		$this->addContent(parent::display(),true);
		$this->addContent($this->type->p());		
		return $this->getContent();
	}
	public function listHeading(){
		$this->addContent(parent::listHeading(),true);
		$this->addContent($this->type->th());		
		return $this->getContent();
	}
	public function listDetail(){
		$this->addContent(parent::listDetail(),true);
		$this->addContent($this->type->td());
		return $this->getContent();
	}
	public function getPostVars(){
		parent::getPostVars();
		$this->type->post();
	}
}

