class summary{
	public $count = 0;
	public $estimated = 0;
	public $actual = 0;
	public $pctDone = 0;
	protected $info = '';
	public $isProject = false;
	public $isTask = false;
	
	public function setProjectTotals($id){
		$this->isProject = true;
	}
	
	public function setTaskTotals($id){
		$this->isTask = true;
		
	}
		
