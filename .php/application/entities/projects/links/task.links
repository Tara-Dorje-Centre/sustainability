<?php
namespace application\entities\projects\links;



class taskLinks 
extends \application\links\entityLinks {
use taskParameters;
	public function __construct(){
		$context = 'task';
		$pageDetail = 'pr_Task_Detail.php';
		$pageList = 'pr_Task_List.php';
		parent::__construct();
		$this->setLinkContext($context,$pageDetail, $pageList);
	}
	public function periodicTasks(bool $closed = false){
		if ($closed == true){
			$status = 'COMPLETE';
			$caption = 'Done';
		} else {
			$status = 'INCOMPLETE';
			$caption = 'To Do';
		}
		$u = $this->urlList(-1,0);
		$u->addParameter($this->pTaskStatus($status));
		return $u->link($caption);
	}
	public function periodicTasksOpen(){
		return $this->periodicTasks(false);
	}
	public function periodicTasksClosed(){
		return $this->periodicTasks(true);
	}
	
}
?>
