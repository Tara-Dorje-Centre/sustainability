<?php
namespace application\links;

class request{
	public function getParameter(string $name,$value){
		$p = new parameter($name,$value);
		return $p;
	}
	public function getUrl(string $page = 'index.php'){
		$u = new url($page);
		return $u;
	}
	
	public function setUrlParameter(url &$u, string $name,$value){
		$p = $this->getParameter($name, $value);
		$u->addParameter($p);
	}
	public function setUrlCalendarParameters(url &$u,$year,$month){
		$this->setUrlParameter($u,'year',$year);
		$this->setUrlParameter($u, 'month',$month);
	} 
	
	public function getUrlBase(string $page,string $scope,string $context){
		$u = $this->getUrl($page);
		$this->setUrlBaseParameters($u,$scope,$context);
		return $u;
	}
	public function setUrlBaseParameters(url &$u,string $scope,string $context){
		$this->setUrlParameter($u,'scope',$scope);
		$this->setUrlParameter($u,'context',$context);
	} 
	
	public function getUrlMenu(string $page,string $context){
		$scope = 'menu';
		$url = $this->getUrlBase($page, $scope, $context);
		return $url;
	}
	public function getUrlList(string $page,string $context){
		$scope = 'list';
		$url = $this->getUrlBase($page, $scope, $context);
		return $url;
	}
	public function getUrlDetail(string $page,string $context){
		$scope = 'detail';
		$url = $this->getUrlBase($page, $scope, $context);
		return $url;
	}
	public function getUrlSave(string $page,string $context){
		$scope = 'save';
		$url = $this->getUrlBase($page, $scope, $context);
		return $url;
	}
	
}

?>
