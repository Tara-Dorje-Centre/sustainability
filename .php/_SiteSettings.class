		$_SESSION['site-contact-email'] = $this->contactEmail;
		$_SESSION['show-public-site'] = $this->showPublicSite;
		$_SESSION['show-cost-reports'] = $this->showCostReports;
		$_SESSION['show-revenue-reports'] = $this->showRevenueReports;
